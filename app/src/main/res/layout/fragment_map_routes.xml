<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MapRoutes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity"
        android:minWidth="400dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="10dp">

    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:id="@+id/map_routes">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a route:"
                android:textSize="24sp" />

            <RadioGroup
                android:id="@+id/radio_group_routes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_title"
                android:orientation="vertical" />

            <Button
                android:id="@+id/button_show_directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_group_routes"
                android:layout_centerHorizontal="true"
                android:text="Show directions" />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>